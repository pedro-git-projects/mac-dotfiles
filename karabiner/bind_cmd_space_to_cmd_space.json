{
    "description": "Remap Cmd+Spacebar to Alt+Spacebar (used to toggle layout on yabai)",
    "manipulators": [
        {
            "from": {
                "key_code": "spacebar",
                "modifiers": {
                    "mandatory": [
                        "left_command"
                    ]
                }
            },
            "to": [
                {
                    "key_code": "spacebar",
                    "modifiers": [
                        "left_option"
                    ]
                }
            ],
            "type": "basic"
        }
    ]
}
